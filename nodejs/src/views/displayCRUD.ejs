<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
    }

    .btn-edit {
        background: orange;
        border: none;
        outline: none;
        height: 24px;
        width: 50px;
        /* margin: 5px 0; */
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-delete {
        background: rgb(230, 88, 102);
        border: none;
        outline: none;
        height: 24px;
        width: 50px;
        /* margin: 5px 0; */
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <td>email</td>
            <td>Firstname</td>
            <td>lastname</td>
            <td>Address</td>
            <td>Phone number</td>
            <td>gender</td>
            <td>Action</td>
        </tr>
        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].phonenumber %>
                </td>
                <td>
                    <%= dataTable[i].gender===1 ? true : false %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button" class="btn-edit">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button" class="btn-delete">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>